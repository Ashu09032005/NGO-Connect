<% var title = ngo.name + " - Details" %>
<% var active = "" %>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(to right, #eef2f3, #ffffff);
  }

  .card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }

  .card img {
    object-fit: cover;
    max-height: 400px;
    border-radius: 12px;
  }

  .needs-list input[type="checkbox"] {
    transform: scale(1.2);
    margin-right: 10px;
  }

  .needs-list label {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .form-section {
      margin-top: 40px;
    }
  }
</style>

<div class="container my-5">
  <div class="row g-4">
    <!-- NGO Info Section -->
    <div class="col-lg-7">
      <div class="card p-4">
        <h2 class="mb-3 text-primary"><%= ngo.name %></h2>
        <img src="<%= ngo.imageURL %>" class="img-fluid mb-4" alt="NGO Image"
          onerror="this.src='https://placehold.co/600x400?text=No+Image';">

        <h4>About the Foundation</h4>
        <p><strong>ğŸ“ Location:</strong> <%= ngo.location %></p>
        <p><strong>ğŸ¯ Cause(s):</strong> <%= Array.isArray(ngo.cause) ? ngo.cause.join(', ') : ngo.cause %></p>
        <p><strong>ğŸ“ Description:</strong> <%= ngo.description %></p>
        <p><strong>âœ‰ï¸ Contact Email:</strong> <%= ngo.contact %></p>
        <p><strong>ğŸ‘¤ Created By:</strong> <%= ngo.createdBy %></p>

        <% if (ngo.website && ngo.website.startsWith('http')) { %>
          <p><a href="<%= ngo.website %>" target="_blank" rel="noopener noreferrer">ğŸŒ Visit Official Website</a></p>
        <% } else { %>
          <p><em>No website available</em></p>
        <% } %>
      </div>
    </div>

    <!-- Contact Form Section -->
    <div class="col-lg-5 form-section">
      <div class="card p-4">
        <h4 class="text-primary mb-4">ğŸ“¨ Contact This NGO</h4>
        <form action="/contact" method="POST">
          <input type="hidden" name="ngoName" value="<%= ngo.name %>" />

          <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Your Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="john@example.com" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Select the needs you want to help with:</label>
            <div class="needs-list">
              <% ngo.needs.forEach(function(need, index) { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="selectedNeeds[]" value="<%= need %>" id="need-<%= index %>">
                  <label class="form-check-label" for="need-<%= index %>"><%= need %></label>
                </div>
              <% }) %>
            </div>
          </div>

          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Write your message..." required></textarea>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
